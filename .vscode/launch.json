      "version": "0.2.0",
      "configurations": [
      { "type"   : "node",
        "request": "launch",
        "name"   : "Current JS File",
        "program": "${file}",
        "skipFiles": [ "<node_internals>/**" ],
      },
      {
        "type": "vscode-edge-devtools.debug",
        "request": "attach",
        "name": "Edge Port 8080",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Chrome Port 5500",
        "port": 5500,
        "request": "attach",
        "url": "http://127.0.0.1:5500/client2/1c2_my-javascript-custom-app/index.html         ",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
      }
      ]  
    }